[tool.ruff]
target-version = "py38"
{%- if linting == "hatch" %}
extend = "ruff_defaults.toml"
{%- else %}
line-length = 120
{%- endif %}

[tool.ruff.lint]
{% if linting != "hatch" -%}
select = [
    "E", # pycodestyle errors
    "W", # pycodestyle warnings
    "F", # pyflakes
    "I", # isort
    "C", # flake8-comprehensions
    "B", # flake8-bugbear
    "N", # pep8-naming
]
{% endif -%}
unfixable = [
    "F401", # unused imports
    "F841", # unused variables
]
